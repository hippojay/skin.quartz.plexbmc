<window id="500">
	<defaultcontrol always="true">50</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<backgroundcolor>0</backgroundcolor>
	<controls>
		<include>GlobalBackground</include>
		<control type="label">
			<include>WindowID</include>
			<label>MyMusicPlaylist.xml</label>
		</control>
		<include>View_50_List</include>
		<control type="group" description="Music Only Thumbs">
			<posx>150</posx>
			<posy>76</posy>
			<aligny>center</aligny>
			<control type="image" description="Movie Cover">
				<width>280</width>
				<height>280</height>
				<aspectratio align="center" aligny="top">keep</aspectratio>
				<fadetime>200</fadetime>
				<texture  border="1" diffuse="img/Diffuse.png" background="true">$INFO[ListItem.Icon]</texture>
				<!--<animation effect="rotatey" start="0" end="-9" center="260," time="0" reversible="false">WindowOpen</animation>-->
			</control>
		</control>
		<control type="group" description="9000">
			<!--<animation type="Conditional" condition="!ControlGroup(9000).HasFocus()">
				<effect type="fade" start="100" end="0" time="300" reversible="true" />
			</animation>-->
			<posx>150</posx>
			<posy>0</posy>
			<control type="image" description="Splitter">
				<posx>260</posx>
				<posy>60</posy>
				<height>580</height>
				<texture flipx="true">img/Splitter.png</texture>
			</control>
			<control type="grouplist" id="9000">
				<posx>0</posx>
				<posy>430</posy>
				<width>280</width>
				<height>520</height>
				<itemgap>0</itemgap>
				<onleft>-</onleft>
				<onright>50</onright>
				<onup>9000</onup>
				<ondown>9000</ondown>
				<scrolltime>220</scrolltime>
				<orientation>vertical</orientation>
				
				<control type="radiobutton" id="20">
					<description>Shuffle</description>
					<width>280</width>
					<align>left</align>
					<label>191</label>
					<texturenofocus>-</texturenofocus>
				</control>
				<control type="button" id="21">
					<description>Save</description>
					<width>280</width>
					<align>left</align>
					<label>190</label>
					<texturenofocus>-</texturenofocus>
				</control>
				<control type="button" id="22">
					<description>Clear</description>
					<width>280</width>
					<align>left</align>
					<label>192</label>
					<texturenofocus>-</texturenofocus>
				</control>
				<control type="button" id="23">
					<description>Play</description>
					<width>280</width>
					<align>left</align>
					<label>208</label>
					<texturenofocus>-</texturenofocus>
				</control>
				
			</control>
		</control>
		<include>Debug_Grid</include>
