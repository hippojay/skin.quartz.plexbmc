<window type="dialog" id="400">
	<defaultcontrol always="true">403</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<visible>Player.HasMedia + Window.IsActive(PlayerControls) + !VideoPlayer.IsFullscreen + !Window.IsActive(Visualisation)</visible>

	<controls>

		<!--<include>GlobalOverlay</include>-->

		<control type="group">
			<posx>840</posx>
			<posy>160</posy>

			<control type="image">
				<posx>-20</posx>
				<posy>-20</posy>
				<width>480</width>
				<height>456</height>
				<texture border="22">img/Menu.png</texture>
			</control>

			<control type="label">
				<include>DialogID</include>
				<label>PlayerControls.xml</label>
			</control>

			<control type="grouplist" id="1">
				<posx>10</posx>
				<posy>40</posy>
				<width>414</width>
				<height>150</height>
				<itemgap>2</itemgap>
				<orientation>horizontal</orientation>
				<onleft>1</onleft>
				<onright>1</onright>
				<onup>-</onup>
				<ondown>2</ondown>

				<control type="togglebutton" id="400">
					<description>Random</description>
					<width>50</width>
					<height>50</height>
					<label>-</label>
					<texturefocus>OSD/RandomOffFO.png</texturefocus>
					<texturenofocus>OSD/RandomOffNF.png</texturenofocus>
					<usealttexture>Playlist.IsRandom</usealttexture>
					<alttexturefocus>OSD/RandomOnFO.png</alttexturefocus>
					<alttexturenofocus>OSD/RandomOnNF.png</alttexturenofocus>
					<onclick>playercontrol(random)</onclick>
				</control>

				<control type="button" id="401">
					<description>Skip Back</description>
					<width>50</width>
					<height>50</height>
					<label>-</label>
					<texturefocus>OSD/PrevTrackFO.png</texturefocus>
					<texturenofocus>OSD/PrevTrackNF.png</texturenofocus>
					<onclick>playercontrol(previous)</onclick>
				</control>

				<control type="button" id="402">
					<description>Rewind</description>
					<width>50</width>
					<height>50</height>
					<label>-</label>
					<texturefocus>OSD/RewindFO.png</texturefocus>
					<texturenofocus>OSD/RewindNF.png</texturenofocus>
					<onclick>playercontrol(rewind)</onclick>
				</control>

				<control type="togglebutton" id="403">
					<description>Play/Pause</description>
					<width>50</width>
					<height>50</height>
					<label>-</label>
					<texturefocus>OSD/PauseFO.png</texturefocus>
					<texturenofocus>OSD/PauseNF.png</texturenofocus>
					<usealttexture>Player.Paused | Player.Forwarding | Player.Rewinding</usealttexture>
					<alttexturefocus>OSD/PlayFO.png</alttexturefocus>
					<alttexturenofocus>OSD/PlayNF.png</alttexturenofocus>
					<onclick>playercontrol(play)</onclick>
				</control>

				<control type="button" id="404">
					<description>Stop</description>
					<width>50</width>
					<height>50</height>
					<label>-</label>
					<texturefocus>OSD/StopFO.png</texturefocus>
					<texturenofocus>OSD/StopNF.png</texturenofocus>
					<onclick>playercontrol(stop)</onclick>
				</control>

				<control type="button" id="405">
					<description>Forward</description>
					<width>50</width>
					<height>50</height>
					<label>-</label>
					<texturefocus>OSD/ForwardFO.png</texturefocus>
					<texturenofocus>OSD/ForwardNF.png</texturenofocus>
					<onclick>playercontrol(forward)</onclick>
				</control>

				<control type="button" id="406">
					<description>Skip Forward</description>
					<width>50</width>
					<height>50</height>
					<label>-</label>
					<texturefocus>OSD/NextTrackFO.png</texturefocus>
					<texturenofocus>OSD/NextTrackNF.png</texturenofocus>
					<onclick>playercontrol(next)</onclick>
				</control>

				<control type="button" id="407">
					<description>Repeat</description>
					<width>50</width>
					<height>50</height>
					<label>-</label>
					<texturefocus>-</texturefocus>
					<texturenofocus>-</texturenofocus>
					<onclick>playercontrol(repeat)</onclick>
				</control>

			</control>

			<control type="group">
				<posx>372</posx>
				<posy>40</posy>

				<control type="image" id="408">
					<width>50</width>
					<height>50</height>
					<texture>OSD/RepeatNF.png</texture>
					<visible>!Playlist.IsRepeat + !Playlist.IsRepeatOne</visible>
					<visible>!Control.HasFocus(407)</visible>
				</control>

				<control type="image" id="409">
					<width>50</width>
					<height>50</height>
					<texture>OSD/RepeatFO.png</texture>
					<visible>!Playlist.IsRepeat + !Playlist.IsRepeatOne</visible>
					<visible>Control.HasFocus(407)</visible>
				</control>

				<control type="image" id="410">
					<width>50</width>
					<height>50</height>
					<texture>OSD/RepeatOneNF.png</texture>
					<visible>Playlist.IsRepeatOne</visible>
					<visible>!Control.HasFocus(407)</visible>
				</control>

				<control type="image" id="411">
					<width>50</width>
					<height>50</height>
					<texture>OSD/RepeatOneFO.png</texture>
					<visible>Playlist.IsRepeatOne</visible>
					<visible>Control.HasFocus(407)</visible>
				</control>

				<control type="image" id="412">
					<width>50</width>
					<height>50</height>
					<texture>OSD/RepeatAllNF.png</texture>
					<visible>Playlist.IsRepeat</visible>
					<visible>!Control.HasFocus(407)</visible>
				</control>

				<control type="image" id="413">
					<width>50</width>
					<height>50</height>
					<texture>OSD/RepeatAllFO.png</texture>
					<visible>Playlist.IsRepeat</visible>
					<visible>Control.HasFocus(407)</visible>
				</control>

			</control>

			<control type="group">
				<posx>10</posx>
				<posy>110</posy>

				<control type="group">
					<visible>Player.HasVideo</visible>

					<control type="image">
						<width>414</width>
						<height>232</height>
						<texture border="2">img/BlackDot.png</texture>
						<bordertexture border="2">img/ButtonNF.png</bordertexture>
						<bordersize>6</bordersize>
					</control>

					<control type="button" id="2">
						<width>414</width>
						<height>232</height>
						<texture border="2">img/BlackDot.png</texture>
						<bordertexture border="5">img/ButtonFO.png</bordertexture>
						<bordersize>6</bordersize>
						<onleft>-</onleft>
						<onright>-</onright>
						<onup>1</onup>
						<ondown>-</ondown>
						<onclick>fullscreen</onclick>
						<visible allowhiddenfocus="true">Control.HasFocus(2)</visible>
					</control>

					<control type="videowindow">
						<description>video</description>
						<posx>6</posx>
						<posy>6</posy>
						<width>402</width>
						<height>220</height>
					</control>

					<control type="label">
						<description>Now Playing Info</description>
						<posx>0</posx>
						<posy>246</posy>
						<width>414</width>
						<label>$INFO[VideoPlayer.TVShowTitle,, - ]$INFO[VideoPlayer.Title]</label>
						<scroll>true</scroll>
					</control>

				</control>

				<control type="group">
					<visible>Player.HasAudio</visible>

					<control type="image">
						<posx>54</posx>
						<width>305</width>
						<height>231</height>
						<texture border="2">img/BlackDot.png</texture>
						<bordertexture border="2">img/ButtonNF.png</bordertexture>
						<bordersize>6</bordersize>
					</control>

					<control type="button" id="2">
						<posx>54</posx>
						<width>305</width>
						<height>231</height>
						<texture border="2">img/BlackDot.png</texture>
						<bordertexture border="5">img/ButtonFO.png</bordertexture>
						<bordersize>6</bordersize>
						<onleft>-</onleft>
						<onright>-</onright>
						<onup>1</onup>
						<ondown>-</ondown>
						<onclick>fullscreen</onclick>
						<visible allowhiddenfocus="true">Control.HasFocus(2)</visible>
					</control>

					<control type="visualisation">
						<description>visualisation</description>
						<posx>60</posx>
						<posy>6</posy>
						<width>292</width>
						<height>219</height>
					</control>

					<control type="label">
						<description>Now Playing Info</description>
						<posx>0</posx>
						<posy>246</posy>
						<width>414</width>
						<label>$INFO[MusicPlayer.Title]$INFO[MusicPlayer.Artist, - ,]</label>
						<scroll>true</scroll>
					</control>

				</control>

			</control>

		</control>

		<include>Debug_Grid</include>

	</controls>

</window>