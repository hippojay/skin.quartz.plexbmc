						<animation type="Focus" reversible="false">
							<effect type="zoom" start="98" end="110" time="330" easing="inout" center="auto"/>
						</animation>
					</control>
					<control type="label">
						<visible>!stringcompare(Container.Listitem(0).Label,..)</visible>
						<posx>95</posx>
						<posy>162</posy>
						<width>180</width>
						<align>center</align>
						<font>XXSmall</font>
						<label>$INFO[ListItem.Label]</label>
					</control>
				</focusedlayout>
			</control>
			<control type="panel" id="52" description="Icons">
				<visible>Container.Content(Episodes)</visible>
