						<aspectratio>keep</aspectratio>
						<fadetime>200</fadetime>
						<animation type="Focus" reversible="false">
							<effect type="zoom" start="98" end="108" time="330" easing="inout" center="auto"/>
						</animation>
					</control>
				</focusedlayout>
			</control>
			<control type="panel" id="52" description="Icons">
