<includes>
	<include name="Movies_View_52">
		<control type="group" description="Icons">
			<visible>Control.IsVisible(52)</visible>
			<include>TopAndBottomSeparator</include>
			<include>Headings</include>
			
			<include condition="![Window.IsActive(MyMusicNav.xml) | Window.IsActive(MyMusicSongs.xml) | Window.IsActive(AddonBrowser.xml)]]">Thumbs</include>
			
			<include condition="!Skin.HasSetting(KioskEnabled)">List_Dots_52</include>
			
			<control type="fixedlist" id="52" description="Banner Icons">
				<visible>Container.Content(TVShows) + !Skin.HasSetting(TVPosters)</visible>
				<viewtype label="536">Icons</viewtype>
				<onleft>9000</onleft>
				<onright>60</onright>
				<posx>650</posx>
				<posy>90</posy>
				<width>580</width>
				<height>580</height>
				<scrolltime>240</scrolltime>
				<pagecontrol>60</pagecontrol>
				<orientation>vertical</orientation>
				<focusposition>1</focusposition>
				<movement>2</movement>
				<preloaditems>4</preloaditems>
				<itemlayout height="140" width="576">
					<control type="image">
						<posx>8</posx>
						<posy>8</posy>
						<width>560</width>
						<height>124</height>
						<!--<bordertexture border="2">img/ButtonFO.png</bordertexture>
						<bordersize>2</bordersize>-->
						<texture background="true">$INFO[ListItem.Icon]</texture>
						<aspectratio>keep</aspectratio>
						<fadetime>200</fadetime>
					</control>
				</itemlayout>
				<focusedlayout height="140" width="576">
					<control type="image">
						<posx>8</posx>
						<posy>8</posy>
						<width>560</width>
						<height>124</height>
						<!--<bordertexture border="2">img/ButtonFO.png</bordertexture>
						<bordersize>2</bordersize>-->
