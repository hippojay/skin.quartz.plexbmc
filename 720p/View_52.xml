					</control>
					<control type="label">
						<visible>!stringcompare(Container.Listitem(0).Label,..)</visible>
						<posx>95</posx>
						<posy>104</posy>
						<width>180</width>
						<align>center</align>
						<font>XXSmall</font>
						<label>$INFO[ListItem.Label]</label>
					</control>
				</focusedlayout>
			</control>
		</control>
