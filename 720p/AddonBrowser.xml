			<control type="grouplist" id="9000">
				<posx>-50</posx>
				<posy>60</posy>
				<width>400</width>
				<height>520</height>
				<itemgap>0</itemgap>
				<onleft>-</onleft>
				<onright>50</onright>
				<onup>-</onup>
				<ondown>-</ondown>
				<scrolltime>220</scrolltime>
				<orientation>vertical</orientation>
				<control type="button" id="2" description="View">
					<width>400</width>
					<align>left</align>
