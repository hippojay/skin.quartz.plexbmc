			<control type="image" description="Reflection">
				<posy>330</posy>
				<width>316</width>
				<height>330</height>
				<bordersize>1</bordersize>
				<aspectratio align="left" aligny="top">stretch</aspectratio>
				<fadetime>200</fadetime>
				<texture diffuse="img/Reflection2.png" background="true" flipy="true">$INFO[ListItem.Icon]</texture>
			</control>
