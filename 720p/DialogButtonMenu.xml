<window type="ButtonMenu" id="111">
	<defaultcontrol always="true">307</defaultcontrol>
	<backgroundcolor>0</backgroundcolor>
	<coordinates>
		<posx>0</posx>
		<posy>0</posy>
	</coordinates>
	<controls>
		<!--<include>GlobalBackground</include>-->
		<control type="group">
			<include>GlobalOverlay</include>
			<animation condition="true" effect="fade" end="60" time="0">Conditional</animation>
		</control>
		
		<control type="label">
			<include>DialogID</include>
			<label>DialogButtonMenu.xml</label>
		</control>
		<control type="group">
			<posx>340</posx>
			<posy>140</posy>
			
			<control type="image">
				<posx>100</posx>
				<width>400</width>
				<height>380</height>
				<texture border="5">img/Menu.png</texture>
				<aspectratio>stretch</aspectratio>
			</control>
			<control type="group" description="Close Button">
				<posx>104</posx>
				<posy>4</posy>
				<include>CloseButton</include>
			</control>
			<control type="image" description="Separator">
				<posy>80</posy>
				<posx>150</posx>
				<height>2</height>
				<width>300</width>
				<texture>img/ButtonFO.png</texture>
			</control>
			<control type="label" id="3100">
				<posx>100</posx>
				<posy>20</posy>
				<font>XLarge</font>
				<textcolor>White</textcolor>
				<width>400</width>
				<height>50</height>
				<align>center</align>
				<label>-</label>
			</control>
			<control type="label" description="Mouse Close button label">
			<visible>Control.HasFocus(13)</visible>
				<posx>100</posx>
				<posy>20</posy>
				<font>XLarge</font>
				<textcolor>White</textcolor>
				<width>400</width>
				<height>50</height>
				<align>center</align>
				<label>222</label>
			</control>

			<control type="grouplist" id="307" description="Menu">
				<posx>150</posx>
				<posy>20</posy>
				<width>400</width>
				<height>400</height>
				<itemgap>0</itemgap>
				<align>center</align>
				<aligny>center</aligny>
				<orientation>vertical</orientation>
				<onup>307</onup>
				<ondown>307</ondown>
				<onleft>Dialog.Close(shutdownmenu)</onleft>
				<onright>Dialog.Close(shutdownmenu)</onright>
				
					<control type="button" id="3" description="Shutdown">
						<width>300</width>
						<height>50</height>
						<visible>!Skin.HasSetting(Shutdown_Hide)</visible>
						<label>13005</label>
						<onclick>ShutDown()</onclick>
					</control>
					<control type="button" id="4" description="Suspend">
						<width>300</width>
						<height>50</height>
						<visible>!Skin.HasSetting(Suspend_Hide)</visible>
						<label>13011</label>
						<onclick>XBMC.Suspend()</onclick>
					</control>
					<control type="button" id="5" description="Reboot">
						<width>300</width>
						<height>50</height>
						<visible>!Skin.HasSetting(Reboot_Hide)</visible>
						<label>13013</label>
						<onclick>XBMC.Reset()</onclick>
					</control>
					<control type="button" id="6" description="Quit">
						<width>300</width>
						<height>50</height>
						<visible>!Skin.HasSetting(Quit_Hide)</visible>
						<label>13009</label>
						<onclick>xbmc.quit</onclick>
					</control>
			</control>
			
		</control>
	</controls>
</window>
