					<posy>76</posy>
					<width>318</width>
					<height>318</height>
					<aspectratio>scale</aspectratio>
					<aligny>bottom</aligny>
					<align>center</align>
					<fadetime>0</fadetime>
					<texture fallback="DefaultAddonNone.png">$INFO[ListItem.Icon]</texture>
				</control>
			</control>
		</control>
		<!--LEFT ENDS-->
		<control type="image">
			<posx>27</posx>
			<posy>307</posy>
			<width>800</width>
			<height>1</height>
			<texture>separator.png</texture>
		</control>
