					<movement>6</movement>
					<viewtype label="">list</viewtype>
					<scrolltime>220</scrolltime>
					<orientation>vertical</orientation>
					<itemlayout height="40" width="500">
						<control type="label">
							<posx>25</posx>
							<posy>0</posy>
							<width>450</width>
							<height>55</height>
							<font>XSmall</font>
							<align>left</align>
							<aligny>center</aligny>
							<info>ListItem.Label</info>
							<scroll>false</scroll>
						</control>
					</itemlayout>
					<focusedlayout height="40" width="500">
						<control type="label">
							<posx>25</posx>
							<posy>0</posy>
							<width>450</width>
							<height>55</height>
							<font>XSmall</font>
							<align>left</align>
							<aligny>center</aligny>
							<selectedcolor>white</selectedcolor>
							<info>ListItem.Label</info>
						</control>
						<control type="label">
							<posx>1r</posx>
							<posy>0</posy>
							<width>50</width>
							<height>55</height>
							<font>XXSmall</font>
							<align>right</align>
							<aligny>center</aligny>
							<selectedcolor>white</selectedcolor>
							<info>ListItem.Label2</info>
						</control>
					</focusedlayout>
				</control>
			</control>
			<control type="textbox" id="4" description="Album Review">
				<visible>!Control.IsVisible(50)</visible>
				<posx>0</posx>
				<posy>-60</posy>
				<width>533</width>
				<height>540</height>
				<label>$INFO[ListItem.Plot]</label>
				<font>Small</font>
				<align>justify</align>
				<textcolor>white</textcolor>
				<shadowcolor>black</shadowcolor>
				<onleft>-</onleft>
				<onright>-</onright>
				<onup>-</onup>
				<ondown>-</ondown>
				<autoscroll time="8000" delay="8000" repeat="5000">true</autoscroll>
			</control>
		</control>
		<!--RIGHT ENDS-->
