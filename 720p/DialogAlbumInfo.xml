				<animation condition="ControlGroup(9000).HasFocus(5)" effect="slide" start="0,0" end="600,0"
			time="200" reversible="true">Conditional</animation>
				<animation condition="ControlGroup(9000).HasFocus(11)" effect="slide" start="0,0" end="800,0"
			time="200" reversible="true">Conditional</animation>
			</control>
			<control type="grouplist" id="9000">
				<posx>40</posx>
				<posy>665</posy>
				<width>1280</width>
				<height>40</height>
